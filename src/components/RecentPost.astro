---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const { title, date } = post.data;
---

<a href={`/blog/${post.slug}`} class="group">
  <div class="flex items-center justify-between">
    <span
      class="text-neutral-800 underline decoration-neutral-500 decoration-2 group-hover:decoration-neutral-800"
    >
      {title}
    </span>
    <time class="text-neutral-800 text-sm" datetime={date.toISOString()}
      >{
        date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }</time
    >
  </div>
</a>
