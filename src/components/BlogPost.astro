---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const { title, description, date, tags } = post.data;
---

<a href={`/blog/${post.slug}`}>
  <p class="pb-1 text-2xl text-neutral-300 font-bold">{title}</p>
  <p class="pb-3 text-lg text-neutral-400 tracking-tight">{description}</p>
  <div class="pb-1 flex items-center justify-between">
    <time class="text-neutral-400 tracking-tight" datetime={date.toISOString()}
      >{
        date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }</time
    >
    <div class="flex space-x-2">
      {
        tags.map((tag) => (
          <p class="p-1 text-xs text-neutral-400 tracking-tight bg-white rounded">
            {tag}
          </p>
        ))
      }
    </div>
  </div>
</a>
