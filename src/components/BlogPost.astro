---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const { title, description, date, tags } = post.data;
---

<article>
  <p class="pb-1 text-2xl text-neutral-300 font-bold">{title}</p>
  <p class="pb-3 text-lg text-neutral-400 tracking-tight">{description}</p>
  <div class="pb-1 flex justify-between">
    <time
      class="text-sm text-neutral-400 tracking-tight"
      datetime={date.toISOString()}
      >{
        date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }</time
    >
    <span class="text-sm text-neutral-400 tracking-tight">{tags}</span>
  </div>
  <div>
    <a href={`/blog/${post.slug}`}>Read Post</a>
  </div>
</article>
